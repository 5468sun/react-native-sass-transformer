{
  "name": "react-native-sass-transformer",
  "version": "1.2.1",
  "description": "Sass transformer for react-native",
  "main": "index.js",
  "repository": "https://github.com/kristerkari/react-native-sass-transformer",
  "scripts": {
    "release": "npmpub",
    "precommit": "lint-staged",
    "test": "eslint ."
  },
  "author": "Krister Kari",
  "license": "MIT",
  "files": [
    "index.js",
    "README.md"
  ],
  "dependencies": {
    "app-root-path": "^2.0.1",
    "css-to-react-native-transform": "^1.6.0",
    "semver": "^5.5.0"
  },
  "peerDependencies": {
    "node-sass": ">=4.0.0",
    "react-native": ">=0.45.0"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "npmpub": "^4.0.1",
    "prettier": "^1.13.5"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "standard",
    "rules": {
      "space-before-function-paren": [
        2,
        "never"
      ],
      "semi": [
        2,
        "always"
      ],
      "quotes": [
        2,
        "double"
      ],
      "no-else-return": 2
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "trailingComma": "none"
  }
}
